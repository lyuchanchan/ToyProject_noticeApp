<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHOOL-NOW"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#111827"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교 생활의 모든 정보를 한 곳에!"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg_card"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:elevation="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="14sp"
                android:textColor="#111827"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_bg_input"
                android:hint="이름을 입력하세요"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="14sp"
                android:textColor="#111827"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_bg_input"
                android:hint="아이디를 입력하세요"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="14sp"
                android:textColor="#111827"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_bg_input"
                android:hint="비밀번호를 입력하세요"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textSize="14sp"
                android:textColor="#111827"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/login_bg_input"
                android:hint="비밀번호를 다시 입력하세요"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="20dp"/>


            <Button
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="가입하기"
                android:backgroundTint="#111827"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:stateListAnimator="@null"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 계정이 있으신가요?"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="로그인"
                android:background="@drawable/login_bg_button_outline"
                android:textColor="#111827"
                android:stateListAnimator="@null"
                android:elevation="0dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>