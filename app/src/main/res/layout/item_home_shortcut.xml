<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_item_shortcut_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_oval_light_purple"
        android:contentDescription="바로가기 아이콘"
        android:padding="16dp"
        tools:src="@drawable/ic_lucide_home" />

    <TextView
        android:id="@+id/text_item_shortcut_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="홈페이지"
        android:textColor="@color/black"
        android:textSize="14sp" />
</LinearLayout>